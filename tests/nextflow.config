/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/

docker {
    enabled = true
    runOptions = "--platform linux/amd64"
}

executor {
    queueSize = 2
}

profiles {
    test {
        process.executor = 'local'
        // Other test-specific settings
    }
    azurebatch {
        includeConfig "$projectDir/conf/azurebatch.config"
        // Your Azure Batch settings
    }
}




process {
    maxCpus = 1
    maxMemory = '4 GB'

    withName: '.*' {
        cpus   = 1
        memory = 4.GB
        time   = 2.h
    }

    // SRA download process specifications
    withName: 'AWS_DOWNLOAD' {
        cpus = 1
        memory = '2 GB'
    }

    withName: 'FASTERQ_DUMP' {
        cpus = 2
        memory = '2 GB'
    }
}

params {
    // Base parameters from your existing config
    input    = "$projectDir/assets/samplesheet-test-local.csv"
    outdir   = "$projectDir/test-out"
    project  = "test"
    
    singleEnd = false
    mergeReads = false
    annotation = true
    rna = false
    nreads = 10000
    
    // Container configurations
    docker_container_humann3 = "gutzcontainers.azurecr.io/humann:3.9"
    docker_container_metaphlan = "gutzcontainers.azurecr.io/metaphlan:4.1.0"
    docker_container_multiqc = "gutzcontainers.azurecr.io/multiqc:1.11"
    docker_container_fastp = "gutzcontainers.azurecr.io/fastp:0.23.4"
    docker_container_aws = "gutzcontainers.azurecr.io/aws-cli-bash:ubuntu"
    docker_container_sra = "gutzcontainers.azurecr.io/sra-tools-bash:latest"

    // AWS config
    aws_region = 'us-east-1'
    
    // Database paths
    metaphlan_index = "mpa_vJan21_TOY_CHOCOPhlAnSGB_202103"
    metaphlan_db = "$projectDir/assets/test_dbs/mp4_test_db/"
    bt2options = "very-sensitive"
    
    chocophlan = "$projectDir/assets/test_dbs/chocophlan"
    uniref = "$projectDir/assets/test_dbs/uniref"
    utility_mapping = "$projectDir/assets/test_dbs/utility_mapping_test"

    // HUMAnN parameters
    humann_params = "--bypass-nucleotide-search"

    // SRA download settings
    max_retry_count = 3
    max_parallel_downloads = 3
}

// Disable execution reports
timeline.enabled = false
report.enabled = false
trace.enabled = false
dag.enabled = false

cleanup = true